<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.FragmentMutasi">
    <data>
        <variable
            name="fragment"
            type="com.example.tubespbp_mbanking.fragment.FragmentMutasi" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/ivMutasi"
            android:src="@drawable/rectangle_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/txtMutasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/mutasi_title"
            android:textColor="@color/coral"
            android:textSize="32sp"
            app:layout_constraintEnd_toEndOf="@+id/ivMutasi"
            app:layout_constraintHorizontal_bias="0.471"
            app:layout_constraintStart_toStartOf="@+id/ivMutasi"
            app:layout_constraintTop_toTopOf="@id/ivMutasi" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/rectMutasi"
            android:src="@drawable/rectangle_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivMutasi"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="24dp"
            />
        <TextView
            android:id="@+id/txt_cari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/black"
            android:text="Cari Mutasi"
            app:layout_constraintStart_toStartOf="@id/rectMutasi"
            app:layout_constraintTop_toTopOf="@id/rectMutasi" />
        <ImageView
            android:id="@+id/iconDate"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_baseline_date_range_24"
            app:layout_constraintStart_toStartOf="@id/rectMutasi"
            app:layout_constraintTop_toBottomOf="@id/txt_cari"
            android:onClick="@{fragment.btnPilihTanggal}"/>
        <TextView
            android:id="@+id/txt_pilih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="5dp"
            android:text="Pilih Tanggal"
            app:layout_constraintStart_toStartOf="@id/iconDate"
            android:textSize="12dp"
            app:layout_constraintTop_toBottomOf="@id/txt_cari"
            android:onClick="@{fragment.btnPilihTanggal}"/>
        <TextView
            android:id="@+id/txt_hari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:textSize="12dp"
            android:text="Hari ini"
            app:layout_constraintStart_toStartOf="@id/iconDate"
            app:layout_constraintTop_toBottomOf="@id/txt_pilih"
            android:textColor="@color/black"
            android:onClick="@{fragment.btnPilihTanggal}"/>
        <View
            android:layout_width="318dp"
            android:layout_height="2px"
            android:layout_marginTop="8sp"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="@id/rectMutasi"
            app:layout_constraintEnd_toEndOf="@id/rectMutasi"
            app:layout_constraintTop_toBottomOf="@id/txt_hari"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCari"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="64dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_weight="1"
            android:backgroundTint="@color/turquoise"
            android:text="Cari"
            app:layout_constraintTop_toBottomOf="@id/txt_hari"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv_mutasi"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/rectMutasi"
            tools:listitem="@layout/recycler_item_mutasi"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>