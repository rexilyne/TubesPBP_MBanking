<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.FragmentKontakKami"
    android:background="@color/grey">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/ivKontakKami"
        android:src="@drawable/rectangle_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_kontak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/kontak_kami_title"
        android:textColor="@color/coral"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="@+id/ivKontakKami"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="@+id/ivKontakKami"
        app:layout_constraintTop_toTopOf="@id/ivKontakKami" />

</androidx.constraintlayout.widget.ConstraintLayout>